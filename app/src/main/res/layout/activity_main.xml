<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="395dp"
            android:layout_height="471dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.5">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Device properties"
                android:layout_gravity="center_vertical|center_horizontal"
                android:textSize="24sp" android:layout_marginTop="24dp"
                android:textColor="#000000"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
        >
            <Button
                    android:text="Location"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:id="@+id/gpsButton"/>
            <Button
                    android:text="Temperature"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:id="@+id/temperatureButton"/>
            <Button
                    android:text="LED colors"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:id="@+id/ledButton"/>
        </LinearLayout>
        <TextView
                android:layout_width="match_parent"
                android:gravity="center"
                android:textColor="#000000"
                android:layout_height="wrap_content" android:id="@+id/temperatureTextView"
                android:layout_marginHorizontal="24pt" android:layout_marginVertical="24pt"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>